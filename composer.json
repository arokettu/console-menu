{
    "name": "arokettu/console-menu",
    "description": "CLI menu for Symfony Console",
    "keywords": ["console", "command list"],
    "type": "library",
    "license": "MIT",
    "homepage": "https://sandfox.dev/php/console-menu.html",
    "authors": [
        {
            "name": "Anton Smirnov",
            "email": "sandfox@sandfox.me",
            "homepage": "https://sandfox.me/",
            "role": "developer"
        }
    ],
    "support": {
        "issues": "https://gitlab.com/sandfox/console-menu/-/issues",
        "source": "https://gitlab.com/sandfox/console-menu",
        "chat": "https://gitter.im/arokettu/community"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Arokettu\\ConsoleMenu\\": "src"
        }
    },
    "require": {
        "php": "^7.1.3 || ^8",
        "php-school/cli-menu": "^3.0 || ^4.0",
        "symfony/console": ">= 4.0 < 9"
    },
    "require-dev": {
        "sandfox.dev/code-standard": "^1.2025.09.17",
        "squizlabs/php_codesniffer": "*"
    }
}
